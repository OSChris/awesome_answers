- if @question.errors.any? 
  %ul
    - @question.errors.full_messages.each do |err| 
      %li= err


= form_for @question do |f| 
  .form-group
    = f.label :title 
    = f.text_field :title, class: "form-control" 

  .form-group
    = f.label :description 
    = f.text_area :description, class: "form-control" 

  = f.submit class: "btn btn-primary" 