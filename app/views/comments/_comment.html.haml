.col-xs-11.col-xs-offset-1{id: dom_id(comment)}
  %hr
  = comment.body
  = formatted_date(comment.created_at)
  = link_to "edit", edit_answer_comment_path(answer, comment), class: "btn btn-info btn-xs"
  = button_to "Delete", [answer, comment], method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs", remote: true
