- if @answer.errors.any?
  $(".flash-messages").html("#{j render '/layouts/flash_messages'}");
  $(".answer-errors").html("#{j render partial: '/shared/standard_errors', locals: { object: @answer } }");
- else
  $(".answer-errors").html("");
  $(".flash-messages").html("#{j render '/layouts/flash_messages'}");
  $(".answers").prepend("#{j render partial: "/answers/answer" , locals: {question: @question, answer: @answer, comment: @comment } }");
  $("#new-answer").val("");